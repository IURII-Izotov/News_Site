generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           String         @id @default(uuid())
  Post         Post[]
  Like         Like[]
  Comment      Comment[]
  CommentReply CommentReply[]
}

model Post {
  id         String    @id @default(uuid())
  title      String    @db.Text
  text       String    @db.LongText
  coverImage String?   @db.LongText
  createdAt  DateTime  @default(now())
  User       User      @relation(fields: [userId], references: [id])
  userId     String
  Tag        Tag[]
  Like       Like[]
  Comment    Comment[]

  @@index([userId])
}

model Tag {
  name String @id
  Post Post[]
}

model Like {
  id     String @id @default(uuid())
  Post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String
  User   User   @relation(fields: [userId], references: [id])
  userId String

  @@index([postId])
  @@index([userId])
}

model Comment {
  id           String         @id @default(uuid())
  text         String         @db.LongText
  createdAt    DateTime       @default(now())
  Post         Post           @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId       String
  User         User           @relation(fields: [userId], references: [id])
  userId       String
  CommentReply CommentReply[]

  @@index([postId])
  @@index([userId])
}

model CommentReply {
  id        String   @id @default(uuid())
  text      String   @db.LongText
  createdAt DateTime @default(now())
  Comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  commentId String
  User      User     @relation(fields: [userId], references: [id])
  userId    String

  @@index([userId])
  @@index([commentId])
}
